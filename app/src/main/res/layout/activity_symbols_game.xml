<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Games.SymbolsGame.SymbolsGameActivity">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="5dp"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/symbol_game_bytton_c0r0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/symbol_game_image_c0r0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/black_pentagon"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/symbol_game_bytton_c1r0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/symbol_game_image_c1r0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/black_triangle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/symbol_game_bytton_c2r0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/symbol_game_image_c2r0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/black_rectangle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/symbol_game_bytton_c0r1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/symbol_game_image_c0r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/black_circle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/symbol_game_bytton_c1r1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/symbol_game_image_c1r1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/black_circle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/symbol_game_bytton_c2r1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/symbol_game_image_c2r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/black_circle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/symbol_game_bytton_c0r2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/symbol_game_image_c0r2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/black_circle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/symbol_game_bytton_c1r2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/symbol_game_image_c1r2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/black_circle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/symbol_game_bytton_c2r2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/symbol_game_image_c2r2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/black_circle"/>
        </LinearLayout>
    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/symbol_game_colors_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/symbol_game_shape_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>